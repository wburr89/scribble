{{#each ideas}}
<div class="index-container animated bounceInRight container card card-body mb-2">
  <h4>{{title}}</h4>
  <p>{{details}}</p>
  <a class="btn btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
  {{!-- Delete request --}}
  <form method="post" action="/ideas/{{id}}?_method=DELETE">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="delete-btn btn btn-danger btn-block" value="Delete">
  </form>
</div>

{{else}} <p>No
  Journal entries
  listed</p>
<a href="ideas/add" class="btn btn-primary">Create Jounral Entry</a>
{{/each}}